{
  "name": "xploree",
  "version": "1.0.0",
  "description": "employee work time tracker and screen recorder",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "prod": "NODE_ENV=production electron .",
    "setup": "node setup-env.js",
    "postinstall": "node setup-env.js",
    "build": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "test": "echo \\\"Error: no test specified\\\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/th3gh0s8/xploree.git"
  },
  "keywords": [
    "xploree",
    "employee-tracker",
    "screen-recorder",
    "js"
  ],
  "author": "th3gh0s8",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/th3gh0s8/xploree/issues"
  },
  "homepage": "https://github.com/th3gh0s8/xploree#readme",
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "@electron/remote": "^2.1.0",
    "axios": "^1.6.0",
    "dotenv": "^16.4.5",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.0",
    "mysql2": "^3.9.8",
    "systeminformation": "^5.30.3"
  },
  "build": {
    "appId": "com.powersoft.xploree",
    "productName": "XPloyee",
    "copyright": "Copyright Â© 2024 Powersoft",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!*.map",
      "!*.log",
      "!docs/**/*",
      "!tests/**/*",
      "!coverage/**/*",
      "!*.md",
      "!*.yml",
      "!*.yaml",
      "!*.lock",
      "!dist/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "asar": false,
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
